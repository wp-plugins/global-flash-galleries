<?xml version="1.0" encoding="utf-8"?>
<settings>
	<group name="bgImage">
		<title>Background Image</title>
		<description>Background image settings</description>
		<items>
			<param name="source" default="">
				<title>Source</title>
				<description>Path to the background of image file</description>
				<input type="image" />
			</param>
			<param name="alpha" default="100">
				<title>Alpha</title>
				<description>Background of image transparency</description>
				<input type="slider" min="0" max="100" />
			</param>
		</items>
	</group>
	<group name="image">
		<title>Image</title>
		<description>Image settings</description>
		<items>
			<param name="align" default="center">
				<title>Align</title>
				<description>Image alignment</description>
				<input type="select">
					<option value="center">center</option>
					<option value="left">left</option>
					<option value="right">right</option>
					<option value="top">top</option>
					<option value="bottom">bottom</option>
				</input>
			</param>
			<param name="scaleMode" default="fill">
				<title>Scale Mode</title>
				<description>Type of image scaling to the size of the visible area</description>
				<input type="select">
					<option value="fit">fit</option>
					<option value="fill">fill</option>
					<option value="noScale">noScale</option>
				</input>
			</param>
			<param name="cornerRadius" default="10">
				<title>Corner Radius</title>
				<description>Image corners roundness degree</description>
				<input type="slider" min="0" max="90" />
			</param>
			<param name="transitionEffect" default="fade">
				<title>Transition Effect</title>
				<description>Type of image transition effect</description>
				<input type="select">
					<option value="fade">fade</option>
					<option value="zoom">zoom</option>
					<option value="pixel">pixel</option>
				</input>
			</param>
			<param name="useShadow" default="true">
				<title>Use Shadow</title>
				<description>Show/hide shadow of image</description>
				<input type="checkbox" value="true|false" />
			</param>
		</items>
	</group>
	<group name="thumbnail">
		<title>Thumbnail</title>
		<description>Thumbnail settings</description>
		<items>
			<param name="style" default="gray">
				<title>Style</title>
				<description>Thumbnail style</description>
				<input type="select">
					<option value="custom">custom</option>
					<option value="black">black</option>
					<option value="gray">gray</option>
					<option value="red">red</option>
					<option value="green">green</option>
					<option value="blue">blue</option>
				</input>
			</param>
			<param name="size" default="50">
				<title>Size</title>
				<description>Thumbnail size</description>
				<input type="int" />
			</param>
			<param name="cornerRadius" default="10">
				<title>Corner Radius</title>
				<description>Degree of thumbnail roundness</description>
				<input type="slider" min="0" max="90" />
			</param>
			<param name="alpha" default="70">
				<title>Alpha</title>
				<description>Thumbnail transparency</description>
				<input type="slider" min="0" max="100" />
			</param>
			<param name="color" default="666666">
				<title>Color</title>
				<description>Color of the thumbnail</description>
				<input type="color" />
			</param>
			<param name="colorOnRollOver" default="5c5c5c">
				<title>Color On Roll Over</title>
				<description>Color of the thumbnail with the mouse pointer rolled over it</description>
				<input type="color" />
			</param>
			<param name="colorOnClick" default="999999">
				<title>Color On Click</title>
				<description>Active thumbnail color</description>
				<input type="color" />
			</param>
			<param name="fontName" default="Arial">
				<title>Font</title>
				<description>Font of image captions</description>
				<input type="font" />
			</param>
			<param name="fontSize" default="32">
				<title>Font Size</title>
				<description>Font size of image captions</description>
				<input type="int" />
			</param>
			<param name="fontColor" default="000000">
				<title>Font Color</title>
				<description>Thumbnail font color</description>
				<input type="color" />
			</param>
			<param name="fontColorOnRollOver" default="ffffff">
				<title>Font On Roll Over</title>
				<description>Color of the thumbnail font with the mouse pointer rolled over it</description>
				<input type="color" />
			</param>
			<param name="fontColorOnClick" default="ffffff">
				<title>Font On Click</title>
				<description>Active thumbnail font color</description>
				<input type="color" />
			</param>
			<param name="useShadow" default="true">
				<title>Use Shadow</title>
				<description>Show/hide shadow of thumbnail</description>
				<input type="checkbox" value="true|false" />
			</param>
			<param name="usePreview" default="true">
				<title>Use Preview</title>
				<description>Show/hide image preview element</description>
				<input type="checkbox" value="true|false" />
			</param>
		</items>
	</group>
	<group name="thumbBar">
		<title>Thumb Bar</title>
		<description>Thumbnail bar settings</description>
		<items>
			<param name="useThumbBar" default="true">
				<title>Use Thumb Bar</title>
				<description>Use Thumb Bar</description>
				<input type="checkbox" value="true|false" />
			</param>
			<param name="scrollSpeed" default="10">
				<title>Scroll Speed</title>
				<description>Thumbnail scroll speed</description>
				<input type="slider" min="3" max="20" />
			</param>
			<param name="position" default="bottom">
				<title>Position</title>
				<description>Thumbnail position</description>
				<input type="select">
					<option value="left">left</option>
					<option value="right">right</option>
					<option value="top">top</option>
					<option value="bottom">bottom</option>
				</input>
			</param>
		</items>
	</group>
	<group name="caption">
		<title>Caption</title>
		<description>Caption settings</description>
		<items>
			<param name="visibleMode" default="onRollOver">
				<title>Visible Mode</title>
				<description>Defines when to show an image caption</description>
				<input type="select">
					<option value="always">always</option>
					<option value="onRollOver">onRollOver</option>
					<option value="never">never</option>
				</input>
			</param>
			<param name="position" default="bottom">
				<title>Position</title>
				<description>Position of image captions</description>
				<input type="select">
					<option value="top">top</option>
					<option value="bottom">bottom</option>
				</input>
			</param>
			<param name="bgAlpha" default="30">
				<title>Background Alpha</title>
				<description>Background transparency of captions</description>
				<input type="slider" min="0" max="100" />
			</param>
			<param name="color" default="ffffff">
				<title>Color</title>
				<description>Color of image captions</description>
				<input type="color" />
			</param>
			<param name="bgColor" default="000000">
				<title>Background Color</title>
				<description>Background color of captions</description>
				<input type="color" />
			</param>
			<param name="fontName" default="Verdana">
				<title>Font Name</title>
				<description>Font of image captions</description>
				<input type="font" />
			</param>
			<param name="fontSize" default="12">
				<title>Font Size</title>
				<description>Font size of image captions</description>
				<input type="int" />
			</param>
		</items>
	</group>
	<group name="slideshow">
		<title>Slideshow</title>
		<description>Slideshow settings</description>
		<items>
			<param name="start" default="false">
				<title>Start</title>
				<description>Enables/Disables slide show mode</description>
				<input type="checkbox" value="true|false" />
			</param>
			<param name="delay" default="3">
				<title>Delay</title>
				<description>Image display duration in Slideshow mode in seconds</description>
				<input type="slider" min="1" max="30" />
			</param>
			<param name="loop" default="true">
				<title>Loop</title>
				<description>Loop/unloop image display in automatic mode if all images are shown</description>
				<input type="checkbox" value="true|false" />
			</param>
			<param name="stopAutoOnClick" default="true">
				<title>Stop Auto On Click</title>
				<description></description>
				<input type="checkbox" value="true|false" />
			</param>
		</items>
	</group>
	<group name="preloader">
		<title>Preloader</title>
		<description>Preloader settings</description>
		<items>
			<param name="usePreloader" default="true">
				<title>Use Preloader</title>
				<description></description>
				<input type="checkbox" value="true|false" />
			</param>
			<param name="color" default="ffffff">
				<title>Color</title>
				<description>Preloader color</description>
				<input type="color" />
			</param>
			<param name="alpha" default="100">
				<title>Alpha</title>
				<description>Preloader transparency</description>
				<input type="slider" min="0" max="100" />
			</param>
		</items>
	</group>
	<group name="buttons">
		<title>Buttons</title>
		<description>Button settings</description>
		<items>
			<param name="navigationButtons" default="true">
				<title>Navigation Buttons</title>
				<description>Show/hide navigation buttons</description>
				<input type="checkbox" value="true|false" />
			</param>
			<param name="slideshowButton" default="true">
				<title>Slideshow Button</title>
				<description>Show/hide slideshow button</description>
				<input type="checkbox" value="true|false" />
			</param>
			<param name="style" default="black">
				<title>Style</title>
				<description>Button style</description>
				<input type="select">
					<option value="custom">custom</option>
					<option value="black">black</option>
					<option value="gray">gray</option>
					<option value="red">red</option>
					<option value="green">green</option>
					<option value="blue">blue</option>
				</input>
			</param>
			<param name="size" default="30">
				<title>Size</title>
				<description>Button size</description>
				<input type="int" />
			</param>
			<param name="cornerRadius" default="10">
				<title>Corner Radius</title>
				<description>Button corners roundness degree</description>
				<input type="slider" min="0" max="90" />
			</param>
			<param name="color" default="333333">
				<title>Color</title>
				<description>Button color</description>
				<input type="color" />
			</param>
			<param name="alpha" default="60">
				<title>Alpha</title>
				<description>Button transparency</description>
				<input type="slider" min="0" max="100" />
			</param>
		</items>
	</group>
	<group name="sounds">
		<title>Sounds</title>
		<description>Sound settings</description>
		<items>
			<param name="onRollOver" default="">
				<title>On Roll Over</title>
				<description>Sound heard when the mouse pointer is rolled over a thumbnail</description>
				<input type="sound" />
			</param>
			<param name="onClick" default="">
				<title>On Click</title>
				<description>Thumbnail click sound</description>
				<input type="sound" />
			</param>
		</items>
	</group>
</settings>