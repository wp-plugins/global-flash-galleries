<?xml version="1.0" encoding="utf-8"?>
<gallery>
	<galleryName>Promo Gallery</galleryName>
	<settings>
		<bgImage
			alpha="{bgImage.alpha}"
			source="{bgImage.source}"
		/>
		<image
			align="{image.align}"
			cornerRadius="{image.cornerRadius}"
			scaleMode="{image.scaleMode}"
			transitionEffect="{image.transitionEffect}"
			useShadow="{image.useShadow}"
		/>
		<thumbnail
			alpha="{thumbnail.alpha}"
			cornerRadius="{thumbnail.cornerRadius}"
			useShadow="{thumbnail.useShadow}"
			size="{thumbnail.size}"
			style="{thumbnail.style}"
			color="0x{thumbnail.color}"
			colorOnRollOver="0x{thumbnail.colorOnRollOver}"
			colorOnClick="0x{thumbnail.colorOnClick}"
			fontName="{thumbnail.fontName}"
			fontSize="{thumbnail.fontSize}"
			fontColor="0x{thumbnail.fontColor}"
			fontColorOnRollOver="0x{thumbnail.fontColorOnRollOver}"
			fontColorOnClick="0x{thumbnail.fontColorOnClick}"
		/>
		<thumbBar
			useThumbBar="{thumbBar.useThumbBar}"
			position="{thumbBar.position}"
			scrollSpeed="{thumbBar.scrollSpeed}"
		/>
		<buttons
			navigationButtons="{buttons.navigationButtons}"
			slideshowButton="{buttons.slideshowButton}"
			style="{buttons.style}"
			size="{buttons.size}"
			cornerRadius="{buttons.cornerRadius}"
			color="0x{buttons.color}"
			alpha="{buttons.alpha}"
		/>
		<caption
			visibleMode="{caption.visibleMode}"
			position="{caption.position}"
			color="0x{caption.color}"
			bgColor="0x{caption.bgColor}"
			bgAlpha="{caption.bgAlpha}"
			fontName="{caption.fontName}"
			fontSize="{caption.fontSize}"
		/>
		<preloader
			usePreloader="{preloader.usePreloader}"
			alpha="{preloader.alpha}"
		/>
		<slideshow
			start="{slideshow.start}"
			delay="{slideshow.delay}"
			loop="{slideshow.loop}"
			stopAutoOnClick="{slideshow.stopAutoOnClick}"
		/>
		<sounds
			onRollOver="{sounds.onRollOver}"
			onClick="{sounds.onClick}"
		/>
		<loader>{loader}</loader>
	</settings>
		
	<items>{items}
	</items>
</gallery>