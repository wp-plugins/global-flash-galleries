<?xml version="1.0" encoding="utf-8"?>
<settings>
	<group name="background">
		<title>Background</title>
		<description></description>
		<items>
			<param name="transparent" default="true">
				<title>Transparent Background</title>
				<description></description>
				<input type="checkbox" value="true|false" />
			</param>
			<param name="color" default="ffffff">
				<title>Background Color</title>
				<description></description>
				<input type="color" />
			</param>
			<param name="image" default="">
				<title>Background Image</title>
				<description></description>
				<input type="image" />
			</param>
		</items>
	</group>
	<group name="lightbox">
		<title>Lightbox</title>
		<description></description>
		<items>
			<param name="useLightbox" default="false">
				<title>Use Lightbox</title>
				<description>Open the images in popup box</description>
				<input type="checkbox" value="true|false" />
			</param>
			<param name="overrideLinks" default="false">
				<title>Override Links</title>
				<description>Override the links assigned to images</description>
				<input type="checkbox" value="true|false" />
			</param>
		</items>
	</group>
	<group name="images">
		<title>Images</title>
		<description>Image settings</description>
		<items>
			<param name="alpha" default="85">
				<title>Alpha</title>
				<description>Image transparency</description>
				<input type="slider" min="0" max="100" />
			</param>
			<param name="margin" default="5">
				<title>Margin</title>
				<description>Distance between images</description>
				<input type="slider" min="0" max="100" />
			</param>
			<param name="visibleQuantity" default="2">
				<title>Visible Images</title>
				<description>Quantity of visible images</description>
				<input type="slider" min="1" max="10" />
			</param>
		</items>
	</group>
	<group name="frame">
		<title>Color Scheme</title>
		<description>Color scheme settings</description>
		<items>
			<param name="frameSize" default="10">
				<title>Frame Size</title>
				<description>Size of image frame</description>
				<input type="slider" min="1" max="100" />
			</param>
			<param name="frameColor" default="ffffff">
				<title>Frame Color</title>
				<description>Color of image frame</description>
				<input type="color" />
			</param>
			<param name="buttonSize" default="40">
				<title>Button Size</title>
				<description>Size of the gallery buttons</description>
				<input type="slider" min="10" max="100" />
			</param>
			<param name="arrowsColor" default="000000">
				<title>Arrows Color</title>
				<description>Arrows color of images</description>
				<input type="color" />
			</param>
			<param name="useShadow" default="true">
				<title>Use Shadow</title>
				<description>Show/hide shadow</description>
				<input type="checkbox" value="true|false" />
			</param>
			<param name="shadowSize" default="5">
				<title>Shadow Size</title>
				<description>Size of the gallery shadow</description>
				<input type="slider" min="1" max="50" />
			</param>
		</items>
	</group>
	<group name="imageCaption">
		<title>Image Caption</title>
		<description>Image caption settings</description>
		<items>
			<param name="fontName" default="Verdana">
				<title>Font Name</title>
				<description>Font of image captions</description>
				<input type="font" />
			</param>
			<param name="fontSize" default="12">
				<title>Font Size</title>
				<description>Font size of image captions</description>
				<input type="int" />
			</param>
			<param name="color" default="ffffff">
				<title>Color</title>
				<description>Color of image captions</description>
				<input type="color" />
			</param>
			<param name="bgColor" default="000000">
				<title>Background Color</title>
				<description>Background color of captions</description>
				<input type="color" />
			</param>
			<param name="bgAlpha" default="50">
				<title>Background Alpha</title>
				<description>Background transparency of captions</description>
				<input type="slider" min="0" max="100" />
			</param>
			<param name="frameColor" default="000000">
				<title>Frame Color</title>
				<description>Color of caption frame</description>
				<input type="color" />
			</param>
			<param name="frameAlpha" default="60">
				<title>Frame Alpha</title>
				<description>Transparency of caption frame</description>
				<input type="slider" min="0" max="100" />
			</param>
		</items>
	</group>
	<group name="sounds">
		<title>Sounds</title>
		<description>Sound settings</description>
		<items>
			<param name="onRollOver" default="">
				<title>On Roll Over</title>
				<description>Sound heard when the mouse pointer is rolled over a thumbnail</description>
				<input type="sound" />
			</param>
			<param name="onClick" default="">
				<title>On Click</title>
				<description>Thumbnail click sound</description>
				<input type="sound" />
			</param>
		</items>
	</group>
	<group name="picasa">
		<title>Picasa</title>
		<description>Using images from picasa.com</description>
		<items>
			<param name="user" default="">
				<title>User</title>
				<description>Login</description>
				<input type="text" />
			</param>
			<param name="albumID" default="">
				<title>Album ID</title>
				<description>Album ID</description>
				<input type="text" />
			</param>
		</items>
	</group>
	<group name="flickr">
		<title>Flickr</title>
		<description>Using images from flickr.com</description>
		<items>
			<param name="userID" default="">
				<title>User ID</title>
				<description>User ID</description>
				<input type="text" />
			</param>
			<param name="photosetID" default="">
				<title>Photoset ID</title>
				<description>Photoset ID</description>
				<input type="text" />
			</param>
			<param name="tags" default="">
				<title>Tags</title>
				<description>Tags</description>
				<input type="text" />
			</param>
		</items>
	</group>
</settings>